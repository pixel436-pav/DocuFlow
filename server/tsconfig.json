{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,            /* Allows 'import express from' instead of 'import * as' */
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"          /* Essential for finding Express types */
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}